{% extends 'base.html.twig' %}

{% block title %}Quote{% endblock %}

{% block body %}
    <h1>Quote</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ quote.id }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ quote.text }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ quote.author }}</td>
            </tr>
            {% if quote.type %}
                <tr>
                    <th>Type</th>
                    <td>{{ quote.type }}</td>
                </tr>
            {% endif %}
        </tbody>
    </table>

    <a href="{{ path('quote_index') }}">back to list</a>

    <a href="{{ path('quote_edit', {'id': quote.id}) }}">edit</a>

    {{ include('quote/_delete_form.html.twig') }}
{% endblock %}
